<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알러지를 선택하세요"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/cookie_r"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/allergy_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="땅콩"
            android:drawableTop="@drawable/a_peanut"
            android:textStyle="bold" />

        <Button
            android:id="@+id/allergy_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_bean"

            android:text="대두" />

        <Button
            android:id="@+id/allergy_meal"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_meal"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="밀" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/allergy_milk"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_milk"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="유제품" />

        <Button
            android:id="@+id/allergy_egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_egg"

            android:layout_weight="1"
            android:text="달걀" />

        <Button
            android:id="@+id/allergy_peach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_fish"

            android:layout_weight="1"
            android:text="복숭아" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/allergy_sea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:drawableTop="@drawable/a_sae"

            android:backgroundTint="@color/white"
            android:text="어패류" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>