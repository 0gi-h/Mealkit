<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가할 재료의 카테고리를 선택하세요!"
                android:fontFamily="@font/cookie_r"
                android:backgroundTint="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"
        ></TextView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:id="@+id/grain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/grain"
                android:text="곡류"  />

            <Button
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:id="@+id/veg"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/veg"

                android:text="채소" />
            <Button
                android:id="@+id/fruit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/fruit"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="과일" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <Button
                android:id="@+id/pork"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/pork"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="돼지고기" />

            <Button
                android:id="@+id/chicken"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/chicken"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="닭고기" />

            <Button
                android:id="@+id/beaf"
                android:layout_width="100dp"
                android:drawableTop="@drawable/beaf"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="소고기" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/milk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/milk"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="유제품" />

            <Button
                android:id="@+id/seasoning"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/seasoning"
                android:text="조미료"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/marin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/marin"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="수산물" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/nut"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/nut"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="견과류" />
            <Button
                android:id="@+id/egg"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/egg"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="달걀" />

            <Button
                android:id="@+id/etc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/etc"
                android:textStyle="bold"
                style="?android:borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="기타" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>